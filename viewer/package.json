{
  "name": "piazzabox-viewer",
  "version": "1.0.0",
  "description": "Static HTML viewer for Piazza course archives",
  "main": "tailwind.config.js",
  "scripts": {
    "format": "prettier --write ./src/index.html --plugin=prettier-plugin-tailwindcss",
    "rebuild-css": "npx tailwindcss -o ./src/assets/tailwind.css --minify",
    "build": "npm run format && npm run rebuild-css"
  },
  "author": "Yuzhou (Joe) Mo",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13"
  }
}
